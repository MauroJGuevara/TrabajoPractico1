				"3":
					escribir "3"
					
					
				"4":
					escribir "4"
					
				"SALIR":
					
					Escribir "    ¡ Adios !      "
					Escribir "Cerrando programa.."
					
			FinSegun
			
		hasta que menu = "SALIR"
		
FinAlgoritmo

